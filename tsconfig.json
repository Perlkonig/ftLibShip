{
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js"],
    "compilerOptions": {
      "target": "es2018",
      "module": "node16",
      "moduleResolution": "Node16",
      "declaration": true, // generate .d.ts files
      "sourceMap": false,
      "outDir": "dist", // output compiled js, d.ts, and source map to dist folder
      "strict": true,
      "esModuleInterop": true
    }
}
